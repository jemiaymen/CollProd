<UserControl x:Class="CollProd.Pages.View.General"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="General" Style="{StaticResource Heading2}" HorizontalAlignment="Center" Margin="12"/>
                <Button x:Name="btngen" Content="General Config" Margin="12,12,12,12" Click="btngen_Click"/>
                <Button x:Name="btnflash" Content="Flash" Margin="12,12,12,12" Click="btnflash_Click" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
